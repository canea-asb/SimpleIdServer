<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:DataType="local:LinkComponent"             
             xmlns:local="clr-namespace:SimpleIdServer.Mobile.Components"
             x:Class="SimpleIdServer.Mobile.Components.LinkComponent"
             x:Name="this">
    <Border Margin="5" BindingContext="{x:Reference this}">
        <StackLayout Orientation="Horizontal" Padding="10,20,10,20">
            <Image WidthRequest="20" Source="{Binding Path=Source}" HorizontalOptions="Start"></Image>
            <Label Padding="5,0,0,0" HorizontalOptions="StartAndExpand" Text="{Binding Path=Title}"></Label>
            <ImageButton HeightRequest="20" WidthRequest="20" Source="rightarrow.svg" Command="{Binding NavigateCommand}" HorizontalOptions="End">
            </ImageButton>
        </StackLayout>
    </Border>
</ContentView>
