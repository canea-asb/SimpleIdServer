<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:DataType="local:Badge"             
             xmlns:local="clr-namespace:SimpleIdServer.Mobile.Components"
             x:Class="SimpleIdServer.Mobile.Components.Badge">
    <Border Style="{StaticResource successBadge}" Padding="5">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="5"></RoundRectangle>
        </Border.StrokeShape>
        <Label TextColor="White" Text="{Binding Path=Title}"></Label>
    </Border>
</ContentView>
